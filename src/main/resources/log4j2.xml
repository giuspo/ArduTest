<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
	<Properties>
		<Property name="log-path">logs</Property>
	</Properties>

	<Appenders>
		<RollingFile name="file" fileName="${log-path}/ArduTest.log"
			 filePattern="${log-path}/ArduTest-%d{yyyy-MM-dd}.log">
			<PatternLayout pattern="[%d];[%level];[%logger];[%msg];%n"/>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
			</Policies>
		</RollingFile>

		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="com.mycompany.ardutest" level="info" additivity="false">
			<appender-ref ref="file" level="info"/>
		</Logger>
		<Root level="info" additivity="false">
			<appender-ref ref="console"/>
		</Root>
	</Loggers>
</Configuration>
